{% extends 'base.html.twig' %}
{% block body %}
<ul class="book-container-search">
    {% for book in books %}
        <li class="book-search-article">
            <article>
                <a href="/book/{{ book.id }}" class="hover:text-red-700">
                    <h3 class="text-2xl">{{ book.title }} by {{ book.author.name }}, {{ book.publicationYear }}</h3>
                </a>
                {% if book.cover == 'placeholder' %}
                    <img src="/uploads/user/placeholder_book.jpg" alt="Couverture du livre" class="book-cover">
                {% else %}
                    <img src="/uploads/user/{{ book.cover }}" alt="Couverture du livre" class="book-cover">
                {% endif %}
                <br>
            </article>
        </li>
    {% endfor %}
</ul>
{% endblock %}
